{
  "compilerOptions": {
    "target": "ESNext",                    
    "module": "CommonJS",                  
    "rootDir": "./src",                    
    "outDir": "./dist",                    
    "strict": true,                        
    "esModuleInterop": true,               
    "moduleResolution": "Node",            
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
